  </concept>
  <concept>
    <code value="SOIN" />
    <display value="Soin" />
  </concept>
  <concept>
    <code value="ADMINISTRATIF" />
    <display value="Administration" />
  </concept>
  <concept>
    <code value="MEDICAL" />
    <display value="Médical" />
  </concept>
  <concept>
    <code value="TECHNIQUE" />
